cxx = g++
cxxflags = -Os -g -std=c++11 -W -Wall -pedantic

rule cxx
    command = $cxx -MMD -MF $out.d $cflags -c $in -o $out
    description = C++ $out
    depfile = $out.d

rule link
    command = $cxx $cflags $ldflags -o $out $in $libs
    description = LNK $out

builddir = build
ldflags = $ldflags -L$builddir

build test: link $builddir/test.o | $builddir/test.o
default test

build $builddir/test.o: cxx test.cpp

